<root>
	<windowclass name="ps_main" merge="join">
		<sheetdata>
			<genericcontrol name="skillframe" merge="delete"/>
			<button_roll name="skillroll" merge="delete"/>
			<label name="skilllabel" merge="delete"/>
			<combobox name="skillselected" merge="delete"/>
			<label name="skilldclabel" merge="delete"/>
			<basicnumber name="skilldc" merge="delete"/>

			<genericcontrol name="atkframe" merge="replace">
				<anchored to="saveframe" position="right" offset="15,0" width="110" />
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<template name="anchor_partysheet_main_footer" mergerule="replace">
		<genericcontrol name="footeranchor">
			<anchored height="20">
				<bottom offset="-35" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
			<gmvisibleonly />
		</genericcontrol>
	</template>
</root>
